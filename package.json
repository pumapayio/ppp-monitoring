{
  "name": "@pumapay/ppp-executor-node",
  "title": "PPP Executor Node",
  "version": "0.0.1",
  "description": "Pull Payment Protocol V3.0 Executor Node",
  "license": "Apache-2.0",
  "authors": [
    "Giorgos Kourtellos <giorgos@pumapay.io> (https://github.com/kourtellosg)"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/pumapayio/ppp-executor-node.git"
  },
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "serve": "npm run start:dev",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "typeorm": "./node_modules/.bin/ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js",
    "migrate:create": "yarn run typeorm -f ormconfig.js migrations:create",
    "migrate:generate": "yarn run typeorm -f ormconfig.js migration:generate -n",
    "migrate:run": "yarn run typeorm -f ormconfig.js migration:run",
    "migrate:revert": "yarn run typeorm -f ormconfig.js migration:revert",
    "schema:drop": "yarn run typeorm -f ormconfig.js schema:drop",
    "schema:sync": "yarn run typeorm -f ormconfig.js schema:sync",
    "schema:log": "yarn run typeorm -f ormconfig.js schema:log",
    "seed:run": "ts-node ./node_modules/typeorm-seeding/dist/cli.js seed",
    "seed:config": "ts-node ./node_modules/typeorm-seeding/dist/cli.js config",
    "db:setup": "yarn run schema:drop && yarn run migrate:run && yarn run seed:run",
    "db:reset": "./scripts/reset-db.sh",
    "dockerize:ppp-executor": "yarn run build && docker build -t ppp-executor:latest ./ -f ./Dockerfile-build"
  },
  "dependencies": {
    "@nestjs/common": "^8.0.0",
    "@nestjs/config": "^2.0.0",
    "@nestjs/core": "^8.0.0",
    "@nestjs/platform-express": "^8.0.0",
    "@nestjs/schedule": "^1.1.0",
    "@nestjs/serve-static": "^2.2.2",
    "@nestjs/swagger": "^5.2.1",
    "@nestjs/typeorm": "^8.0.3",
    "bignumber.js": "^9.0.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.13.2",
    "compression": "^1.7.4",
    "express-rate-limit": "^5.1.1",
    "handlebars": "^4.7.7",
    "helmet": "^3.22.0",
    "lodash": "^4.17.21",
    "moment": "^2.29.2",
    "morgan": "^1.10.0",
    "nocache": "^2.1.0",
    "nodemailer": "^6.7.3",
    "pg": "^8.7.3",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.2.0",
    "shortid": "^2.2.16",
    "swagger-ui-express": "^4.3.0",
    "typeorm": "0.2.45",
    "typeorm-seeding": "^1.6.1",
    "web3": "^1.7.3"
  },
  "devDependencies": {
    "@nestjs/cli": "^8.0.0",
    "@nestjs/schematics": "^8.0.0",
    "@nestjs/testing": "^8.0.0",
    "@types/express": "^4.17.13",
    "@types/jest": "27.4.1",
    "@types/node": "^16.11.10",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "commitizen": "^4.2.4",
    "cz-conventional-changelog": "3.3.0",
    "dotenv": "^16.0.0",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^27.2.5",
    "prettier": "^2.3.2",
    "source-map-support": "^0.5.20",
    "supertest": "^6.1.3",
    "ts-jest": "^27.0.3",
    "ts-loader": "^9.2.3",
    "ts-node": "10.4.0",
    "tsconfig-paths": "^3.10.1",
    "typescript": "4.5.2"
  },
  "resolutions": {
    "minimist": "^1.2.5",
    "mem": " >=4.0.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
